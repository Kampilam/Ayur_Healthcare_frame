<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ayur Healthcare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="styles.css">
  <!-- <style>
    body {
    padding-top: 56px; /* Adjust based on your navbar height */
    padding-bottom: 60px; /* Adjust based on your footer height */
    background-color: aquamarine;
  }
  </style> -->
</head>

<body>
  <nav class="" style="background-color: #152238">
    <div class="container-fluid text-end">
      <div class="text-light">Mobile No. 9010480913</div>
    </div>
  </nav>
  <!-- large navbar -->
  <nav class="bg-white p-2" id="large_navbar">
    <div class="container-fluid">
      <div class="row">
        <div class="col-6">
          <!-- to do logo -->
          <!-- to do company name -->
          <div class="fw-bold text-center">
            <a class="navbar-brand d-flex justify-content-start" href="#">
              <img src="/images/logo4.png" alt="Logo" width="35" height="35"
                class="d-inline-block align-text-top">
              <span class="align-self-center">Ayur Healthcare</span>
            </a>
          </div>
        </div>
        <!-- md screen lists -->
        <div class="col-6 d-none d-md-block p-2 d-flex justify-content-end">
          <div class="d-flex justify-content-evenly">
            <div class="nav-list">
              <a class="nav-link" href="/">Home</a>
            </div>
            <div class="nav-list">
              <a class="nav-link" href="/jobs">Jobs</a>
            </div>
            <div class="nav-list">
              <a class="nav-link" href="/services">Services</a>
            </div>
          </div>
        </div>
        <!-- small screen toggler -->
        <div class="col-6 d-flex justify-content-end">
          <div class="offcanvas offcanvas-end" id="demo">
            <div class="offcanvas-header">
              <h1 class="offcanvas-title text-decoration-underline">Ayur Healthcare</h1>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
              <h3 class="my-5 text-secondary"><a class="nav-link" href="#">Home</a></h3>
              <h3 class="my-5 text-secondary"><a class="nav-link" href="#">jobs</a></h3>
              <h3 class="my-5 text-secondary"><a class="nav-link" href="#">Services</a></h3>
            </div>
          </div>
          <div class="col-6 d-flex justify-content-end d-md-none">
            <button class="btn bg-body-secondary align-items-center" type="button" data-bs-toggle="offcanvas"
              data-bs-target="#demo">
              <span class="navbar-toggler-icon">...</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <!-- green border with title -->
  <div class="container-fluid bg-success p-md-5 p-4 text-center align-items-center">
    <h1 class="text-white">Ayur Healthcare</h1>
  </div>
  <!-- jobs details and description -->
  <h3 class="text-center m-2 mt-5 mt-md-5">Job Applications</h3>
  <div class="container p-lg-5">
    {{#jobs}}
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">
        <h6>Job description: </h6>{{description}}</p>
        <div class="row">
          <div class="card-text col-4"><b>Location: </b><small>{{location}}</small></div>
          <div class="card-text col-4"><b>Salary: </b><small>{{salary}}</small></div>
          <a href="/job/{{id}}" class="btn btn-primary btn-sm col-4 d-flex align-items-center justify-content-center" style="width: 100px;">Apply</a>
        </div>
      </div>
    </div>
    {{/jobs}}
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>