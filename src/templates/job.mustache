<!--APPLICATION FORM-->
    <div class="container px-4 mt-5">
        <h1 class="text-center">Thank you for Applying - {{job.title}}</h1>
        <div class="text-center mb-5">
            {{job.location}} â€¢ {{job.salary}}
        </div>
        <form
          class="offset-lg-2 col-lg-8"
          action="/job/{{job.id}}/apply"
          method="post"
        >
          <!--NAME-->
          <div class="mb-3 col-sm-6">
            <label for="fullname" class="form-label"> Full Name </label>
            <input
              type="text"
              class="form-control"
              name="name"
              required
              placeholder="Last_name First_name"
              id="fullname"
            />
          </div>
  
          <!--EMAIL-->
          <div class="mb-3 col-sm-6">
            <label for="email" class="form-label"> Email address </label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="example@email.com"
              id="email"
              aria-describedby="emailHelp"
              required
            />
          </div>
  
          <!--PHONE-->
          <div class="mb-3 col-sm-6">
            <label for="phone" class="form-label">Phone</label>
            <input
              type="tel"
              class="form-control"
              id="phone"
              placeholder="+919898989898"
              name="phone"
              required
            />
          </div>
  
          <!--DOB-->
          <div class="mb-3 col-sm-6">
            <label for="dob" class="form-label">Date of Birth</label>
            <input
              type="date"
              class="form-control"
              id="dob"
              name="dob"
              required
            />
          </div>

          <!-- qualification -->
          <div class="mb-3 col-sm-6">
            <label for="dob" class="form-label" required>Education</label>
          <select class="form-select" aria-label="Default select example">
            <option selected>Qualification</option>
            <option value="1">10+2</option>
            <option value="2">Graduation</option>
            <option value="3">Post Graduation</option>
          </select>
        </div>
  
          <!--RESUME-->
          <div class="mb-3 col-sm-6">
            <label for="resume" class="form-label">Upload Resume</label>
            <input
              type="file"
              class="form-control"
              id="resume"
              name="resume"
              required
            />
          </div>
  
          <!--COVER LETTER-->
          <div class="mb-3">
            <label for="coverletter" class="form-label">Cover Letter</label>
            <textarea
              placeholder="Tell me about yourself"
              class="form-control"
              id="coverletter"
              name="coverletter"
              rows="5"
              required
            ></textarea>
          </div>
  
          <!--TERMS-->
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="terms" />
            <label class="form-check-label" for="terms"
              >I agree to the terms and coditions.</label
            >
          </div>
  
          <!--SUBMIT BUTTON-->
          <button type="submit" class="btn btn-primary">
            Submit Application
          </button>
        </form>
      </div>


